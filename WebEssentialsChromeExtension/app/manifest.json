{
  "manifest_version": 2,

  "name": "Web Essentials",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",
  
   "background" : {
     "scripts": ["background.js"]
   },

   "content_scripts" : [
    {
      "matches" : ["<all_urls>"],
      "js" : ["content.js"],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
   
  "page_action": {
    "default_icon": "img/vs-19.png",
    "default_title" : "Web Essentials 2013",
	"default_popup": "popup/popup.html"
  },

  "icons" : {
    "19" : "img/vs-19.png",
	"48" : "img/vs-48.png",
	"128" : "img/vs-128.png"
  },
  
  "permissions": ["tabs", "contextMenus", "<all_urls>"]
}